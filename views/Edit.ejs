<% layout("/layouts/boilerplat")%>

<body class="d-flex">
  

  <main class="form-container container d-flex justify-content-center align-items-start">
    <form method="post" action="http://localhost:8080/edit/<%=data.id%>" class="bg-white p-4 mt-5 rounded shadow w-100" style="max-width: 600px;">
      <h1 class="text-center mb-4 text-primary">Edit Student</h1>

      <div class="mb-3">
        <label for="name" class="form-label">Full Name</label>
        <input type="text" class="form-control" id="name" name="name" value="<%=data.name%>" required />
      </div>

      <div class="mb-3">
        <label for="course" class="form-label">Course</label>
        <input type="text" class="form-control" id="course" name="cours" value="<%=data.cours%>" required />
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email Address</label>
        <input type="email" class="form-control" id="email" name="email" value="<%=data.email%>" required />
      </div>

      <div class="mb-4">
        <label for="phone" class="form-label">Phone Number</label>
        <input type="tel" class="form-control" id="phone" name="phone" value="<%=data.phone%>" required />
      </div>

      <button type="submit" class="btn btn-success w-100">Edit</button>
    </form>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

