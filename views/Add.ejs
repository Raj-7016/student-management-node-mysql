<% layout("/layouts/boilerplat")%>

<body class="d-flex">

  <main class="form-container container d-flex justify-content-center align-items-start">
    <form method="post" action="http://localhost:8080/Add" class="bg-white p-4 rounded shadow w-100 mt-5" style="max-width: 600px;">
      <h1 class="text-center mb-4 text-primary">Add Student</h1>

      <div class="mb-3">
        <label for="name" class="form-label">Full Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="e.g. John Doe" required />
      </div>

      <div class="mb-3">
        <label for="course" class="form-label">Course</label>
        <input type="text" class="form-control" id="course" name="cours" placeholder="e.g. Computer Science" required />
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email Address</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="e.g. john@example.com" required />
      </div>

      <div class="mb-4">
        <label for="phone" class="form-label">Phone Number</label>
        <input type="tel" class="form-control" id="phone" name="phone" placeholder="e.g. +1234567890" required />
      </div>

      <button type="submit" class="btn btn-success w-100">Submit</button>
    </form>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>


